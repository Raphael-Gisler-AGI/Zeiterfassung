<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="modifyDialog" title="Title">
		<beginButton>
			<Button text="OK" type="Emphasized" press="onOkModify" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseModify" />
		</endButton>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
			<f:SimpleForm
				id="appointmentCreateForm"
				editable="true"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
				<Label
					visible="false"
					id="modifyId"/>
				<Label text="Description" labelFor="appDescription" />
				<TextArea
					required="true"
					id="modifyDescription"/>
				<Label text="Category" labelFor="category" />
				<ComboBox
					id="modifyCategory"
					selectionChange="onChangeCategoryModify"
					items="{categories>/}">
					<core:Item
						key="{categories>id}"
						text="{categories>Name}" />
				</ComboBox>
				<Label
					text="{= ${type>/Type} > 1 ? 'From' : 'Day'}"
					labelFor="startDate" />
				<DatePicker
				 	valueFormat="YYYY.MM.dd"
					id="modifyStartDate"
					required="true" />
				<Label />
				<VBox visible="{= ${type>/Type} > 1 ? true : false}">
					<Label text="Until"/>
					<DatePicker />
				</VBox>
				<Label />
				<HBox visible="{= ${type>/Type} > 1 ? false : true}" justifyContent="SpaceBetween">
					<VBox>
						<Label text="Start Time" labelFor="startTime" />
						<TimePicker
							id="modifyStartTime"
							minutesStep="{= ${type>/Type} > 0 ? 1 : 15}"
							support2400="true"
							valueFormat="HH:mm"
							displayFormat="HH:mm" />
					</VBox>
					<VBox>
						<Label text="End Time" labelFor="endTime" />
						<TimePicker
							id="modifyEndTime"
							minutesStep="{= ${type>/Type} > 0 ? 1 : 15}"
							support2400="true"
							valueFormat="HH:mm"
							displayFormat="HH:mm"/>
					</VBox>
				</HBox>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>