<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="modifyDialog" title="Title">
		<beginButton>
			<Button text="OK" type="Emphasized" press="onOkModify" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseModify" />
		</endButton>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
			<f:SimpleForm
				id="appointmentCreateForm"
				editable="true"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
				<Label text="Description" labelFor="appDescription" />
				<TextArea
					required="true"
					value="{modify>/Description}" />
				<Label text="Category" labelFor="category" />
				<ComboBox
					selectionChange="onChangeCategoryModify"
					items="{categories>/}">
					<core:Item
						key="{categories>id}"
						text="{categories>Name}" />
				</ComboBox>
				<Label text="{= ${modify>/Type} > 1 ? 'From' : 'Day'}" labelFor="startDate" />
				<DatePicker
					dateValue="{modify>/Day}"
					required="true"
					change="handleDatePickerChange" />
				<Label />
				<VBox visible="{= ${modify>/Type} > 1 ? true : false}">
					<Label text="Until"/>
					<DatePicker />
				</VBox>
				<Label />
				<HBox visible="{= ${modify>/Type} > 1 ? false : true}" justifyContent="SpaceBetween">
					<VBox>
						<Label text="Start Time" labelFor="startTime" />
						<TimePicker
							value="{modify>/StartDate}"
							valueFormat="hh:mm"
							displayFormat="hh:mm" />
					</VBox>
					<VBox>
						<Label text="End Time" labelFor="endTime" />
						<TimePicker
							displayFormat="hh:mm" />
					</VBox>
				</HBox>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>