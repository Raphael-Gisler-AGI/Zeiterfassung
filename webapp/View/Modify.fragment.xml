<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="modifyDialog" title="Title">
		<beginButton>
			<Button text="OK" type="Emphasized" press="handleDialogOkButton" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseModify" />
		</endButton>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
			<f:SimpleForm
				id="appointmentCreateForm"
				editable="true"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
				<Label text="Description" labelFor="appDescription" />
				<TextArea id="appDescription" />
				<Label text="Category" labelFor="category" />
				<Select
					id="category"
					items="{categories>/}">
					<core:Item key="{type}" text="{categories>Name}" />
				</Select>
				<Label text="Day" labelFor="startDate" />
				<DatePicker
					required="true"
					visible="{= ${allDay>/allDay}}"
					change="handleDatePickerChange" />
				<Label />
				<VBox>
					<Label text="Start Time" labelFor="startTime" />
					<TimePickerSliders
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"
						displayFormat="hh:mm"
						minutesStep="15"
						height="200px" />
				</VBox>
				<VBox>
					<Label text="End Time" labelFor="endTime" />
					<TimePickerSliders
						visible="{= ${allDay>/allDay}}"
						change="handleDatePickerChange"
						displayFormat="hh:mm"
						height="200px" />
				</VBox>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>