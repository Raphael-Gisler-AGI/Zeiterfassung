<mvc:View xmlns:core="sap.ui.core"
	controllerName="sap.ui.agi.zeiterfassung.controller.Default"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Panel
		headerText="Default Values"
		expandable="true">
		<content>
			<TextArea
				width="100%"
				value="{default>/Description}"
				placeholder="Default Description..."
				rows="4" />
			<ComboBox
				width="100%"
				items="{categories>/}"
				placeholder="Default Category..."
				selectionChange="onChangeCategory"
				selectedKey="{default>/Category}">
				<core:Item
					key="{categories>id}"
					text="{categories>Name}" />
			</ComboBox>
			<Button
				width="50%"
				text="Save"
				icon="sap-icon://save"
				press="onSave" />
		</content>
	</Panel>
</mvc:View>