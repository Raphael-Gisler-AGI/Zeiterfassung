<mvc:View xmlns:core="sap.ui.core"
	controllerName="sap.ui.agi.zeiterfassung.controller.Default"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns="sap.m">
	<grid:CSSGrid
		class="sapUiMediumMarginTop"
		gridGap="20px">
		<Title
			text="Default Values"
			titleStyle="H3"
			textAlign="Center" />
		<TextArea
			value="{default>/Description}"
			placeholder="Default Description..."
			rows="4" />
		<SelectList
			items="{categories>/}"
			selectionChange="onChangeCategory"
			selectedKey="{default>/Category}">
			<core:Item
				key="{categories>id}"
				text="{categories>Name}" />
		</SelectList>
		<Button
			text="Save"
			icon="sap-icon://save"
			press="onSave" />
	</grid:CSSGrid>
</mvc:View>