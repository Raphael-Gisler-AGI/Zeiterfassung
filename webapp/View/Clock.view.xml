<mvc:View
    controllerName="sap.ui.agi.zeiterfassung.controller.Clock"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <OverflowToolbar height="60px">
        <Input
            value="{timer>/description}"
            placeholder="Description"
            width="300px"/>
        <ComboBox
            required="true"
            placeholder="Choose a Category..."
            items="{categories>/}"
            selectionChange="onSetCategory">
            <items>
                <core:Item
                    key="{categories>id}"
                    text="{categories>Name}" />
            </items>
        </ComboBox>
        <ObjectNumber
            class="sapMObjectNumberLarge"
            number="{timer>/timeDisplay}" />
        <Button
            press="onPressActivate"
            icon="{= ${timer>/active} ? 'sap-icon://stop' : 'sap-icon://play'}" />
        <Button
            visible="{= ${timer>/active}}"
            press="resetTimer"
            icon="sap-icon://sys-cancel"/>
        <ToolbarSpacer />
        <Button 
            press="onPressCreate"
            text="Erstellen" icon="sap-icon://add" />
    </OverflowToolbar>
</mvc:View>