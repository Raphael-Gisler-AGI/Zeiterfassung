<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Clock"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core">
	<VBox>
		<FlexBox alignItems="Center">
			<Text text="{Timer>/time}"/>
			<Button
				press="onPressActivate"
				text="{= ${Timer>/active} ? 'Stop' : 'Start'}"/>
		</FlexBox>
	</VBox>
</mvc:View>