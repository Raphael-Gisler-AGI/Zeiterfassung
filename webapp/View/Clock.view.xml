<mvc:View
    controllerName="sap.ui.agi.zeiterfassung.controller.Clock"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel
        expanded="true"
        expandable="true">
        <headerToolbar>
            <Toolbar>
                <Title text="Timer" />
                <ToolbarSpacer />
                <Button
                    press="onPressReset"
                    tooltip="Reset the timer"
                    icon="sap-icon://reset" />
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox
                width="100%"
                justifyContent="Center">
                <Button
                    press="onPressClock"
                    width="50px"
                    icon="{= ${timer>/active} ? 'sap-icon://save' : 'sap-icon://media-play'}" />
            </HBox>
            <ObjectNumber
                textAlign="Center"
                class="sapMObjectNumberLarge"
                number="{
                    path: 'timer>/time',
                    formatter: '.formatter.getDisplayTime'
                }" />
            <TextArea
                width="100%"
                value="{timer>/description}"
                change="onChangeDescription"
                placeholder="Description" />
            <ComboBox
                id="clockCategory"
                width="100%"
                required="true"
                placeholder="Choose a Category..."
                items="{categories>/}"
                selectionChange="onSetCategory">
                <items>
                    <core:Item
                        key="{categories>id}"
                        text="{categories>Name}" />
                </items>
            </ComboBox>
        </content>
    </Panel>
</mvc:View>