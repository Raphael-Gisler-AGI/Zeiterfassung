<mvc:View
    controllerName="sap.ui.agi.zeiterfassung.controller.Clock"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel
        headerText="Timer"
        expanded="true"
        expandable="true">
        <content>
            <HBox
                width="100%"
                justifyContent="SpaceAround">
                <Button
                    press="onPressReset"
                    visible="{timer>/active}"
                    width="50px"
                    icon="sap-icon://reset" />
                <Button
                    press="onPressSave"
                    visible="{timer>/active}"
                    width="50px"
                    icon="sap-icon://save" />
                <Button
                    press="onPressActivate"
                    visible="{= ${timer>/active} ? false : true}"
                    width="50px"
                    icon="sap-icon://media-play" />
            </HBox>
            <ObjectNumber
                textAlign="Center"
                class="sapMObjectNumberLarge"
                number="{
                    path: 'timer>/time',
                    formatter: '.formatter.getDisplayTime'
                }" />
            <TextArea
                width="100%"
                value="{timer>/description}"
                placeholder="Description" />
            <ComboBox
                width="100%"
                required="true"
                placeholder="Choose a Category..."
                items="{categories>/}"
                selectionChange="onSetCategory">
                <items>
                    <core:Item
                        key="{categories>id}"
                        text="{categories>Name}" />
                </items>
            </ComboBox>
        </content>
    </Panel>
</mvc:View>