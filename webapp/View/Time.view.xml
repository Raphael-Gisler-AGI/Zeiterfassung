<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Time"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<VBox>
		<FlexBox alignItems="Center" width="100%" justifyContent="SpaceBetween">
			<Input
				value="{Timer>/Description}"
				placeholder="Description"
				width="400px"/>
			<FlexBox alignItems="Center">
				<Text text="{Timer>/time}"/>
				<Button
					press="onPressActivate"
					text="{= ${Timer>/active} ? 'Stop' : 'Start'}"/>
				<Button
					press="onPressSave"
					text="Save"/>
			</FlexBox>
		</FlexBox>
		<List
			id="invoiceList"
			class="sapUiResponsiveMargin"
			items="{
				path : 'entries>/',
				sorter: {
					path: 'Day',
					group: true
				}
			}">
			<items>
				<ObjectListItem
				 	number="{entries>Time}"
					title="{entries>Description}">
				</ObjectListItem>
			</items>
		</List>
	</VBox>
</mvc:View>