<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Time"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns="sap.m">
	<grid:CSSGrid>
		<ScrollContainer class="sapUiMediumMargin" vertical="true">
			<Table
				id="entryTable"
				items="{
					path: 'entries>/',
					sorter: {
						path: 'Day',
						descending: true,
						group: true
					}
				}">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Entries" level="H1" />
							<ToolbarSpacer />
							<SearchField
								width="20%"
								search="onFilterCategory"
								placeholder="Choose a Category">
							</SearchField>
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Description" />
					</Column>
					<Column>
						<Text text="Time" />
					</Column>
					<Column>
						<Text text="Duration" />
					</Column>
					<Column>
						<Text text="Category" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Continue" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Edit" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Delete" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<ObjectIdentifier
								title="{entries>Description}" />
							<HBox>
								<Text
									text="{
										path: 'entries>StartTime',
										type: 'sap.ui.model.type.Date',
										formatOptions: {pattern: 'hh:mm'}
									}" />
								<Text text=" - " />
								<Text
									text="{
								path: 'entries>EndTime',
								type: 'sap.ui.model.type.Date',
								formatOptions: {pattern: 'hh:mm'}}" />
							</HBox>
							<Text
								text="{entries>Duration}" />
							<Text text="{
								path: 'entries>Category',
								formatter: '.formatter.categoryText'
							}"/>
							<Button
								icon="sap-icon://play"
								press="onPressContinue" />
							<Button
								icon="sap-icon://edit"
								press="onPressEdit" />
							<Button
								icon="sap-icon://delete"
								press="onPressDelete" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
	</grid:CSSGrid>
</mvc:View>