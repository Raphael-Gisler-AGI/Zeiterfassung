<mvc:View xmlns:core="sap.ui.core"
	controllerName="sap.ui.agi.zeiterfassung.controller.Time"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<ScrollContainer height="90vh" vertical="true">
		<Table
			id="entryTable"
			autoPopinMode="true"
			items="{
					path: 'entries>/',
					sorter: [
					{
						path: 'Day',
						descending: true,
						group: true
					},
					{
						path: 'StartTime',
						descending: true
					}]
				}">
			<headerToolbar>
				<Toolbar>
					<content>
						<Title text="Entries" level="H1" />
						<ToolbarSpacer />
						<SearchField
							width="30%"
							liveChange="onFilterSearch"
							placeholder="Search for a Description">
						</SearchField>
						<ComboBox
							placeholder="Search for a Category"
							selectionChange="onFilterCategory"
							items="{categories>/}">
							<core:ListItem
								text="{categories>Name}"
								key="{categories>id}" />
						</ComboBox>
					</content>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column
					width="40%">
					<Text text="Description" />
				</Column>
				<Column>
					<Text text="Time" />
				</Column>
				<Column>
					<Text text="Duration" />
				</Column>
				<Column>
					<Text text="Category" />
				</Column>
				<Column
					width="80px"
					hAlign="Right">
					<Text text="Edit" />
				</Column>
				<Column
					width="80px"
					hAlign="Right">
					<Text text="Delete" />
				</Column>
			</columns>
			<items>
				<ColumnListItem
					highlight="{= !${entries>id} ? 'Information' : 'None'}">
					<cells>
						<ObjectIdentifier
							title="{entries>Description}" />
						<Text
							text="{
									path: 'entries>StartTime',
									formatter: '.formatter.getDate'
								} - {
									path: 'entries>EndTime',
									formatter: '.formatter.getDate'
								}" />
						<Text
							text="{
									path: 'entries>Duration',
									formatter: '.formatter.getTime'
								}" />
						<Text
							text="{
								path: 'entries>Category',
								formatter: '.formatter.getCategoryText'
							}" />
						<Button
							icon="sap-icon://edit"
							press=".onPressEdit" />
						<Button
							icon="sap-icon://delete"
							press=".onPressDelete" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</mvc:View>