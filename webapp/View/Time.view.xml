<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Time"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns="sap.m">
	<grid:CSSGrid gridGap="50px">
		<FlexBox alignItems="Center" width="100%" justifyContent="SpaceBetween">
			<FlexBox>
				<Input
				 	class="sapUiSmallMarginEnd"
					value="{timer>/description}"
					placeholder="Description"
					width="400px" />
				<ComboBox
					required="true"
					placeholder="Choose a Category..."
					items="{categories>/}"
					selectionChange="onSetCategory">
					<items>
						<core:Item
							key="{categories>id}"
							text="{categories>Name}" />
					</items>
				</ComboBox>
			</FlexBox>
			<HBox>
				<ObjectNumber
					class="sapMObjectNumberLarge"
					number="{timer>/timeDisplay}" />
				<Button
					class="sapUiMediumMarginBeginEnd"
					press="onPressActivate"
					icon="{= ${timer>/active} ? 'sap-icon://stop' : 'sap-icon://play'}" />
			</HBox>
		</FlexBox>
		<ScrollContainer height="100vh" vertical="true">
			<Table
				items="{
				path: 'entries>/',
				sorter: {
					path: 'Day',
					group: true
					}
				}">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Entries" level="H1" />
							<ToolbarSpacer />
							<ComboBox id="idPopinLayout"
								placeholder="Choose a Category">
								<items>
									<core:Item text="Block"
										key="Block" />
									<core:Item text="Grid Large"
										key="GridLarge" />
									<core:Item text="Grid Small"
										key="GridSmall" />
								</items>
							</ComboBox>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column
						width="12em">
						<Text text="Description" />
					</Column>
					<Column
						demandPopin="true">
						<Text text="Time" />
					</Column>
					<Column>
						<Text text="Duration" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Edit" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Delete" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<ObjectIdentifier
								title="{entries>Description}" />
							<HBox>
								<Text
									text="{
								path: 'entries>StartTime',
								type: 'sap.ui.model.type.Date',
								formatOptions: {pattern: 'hh:mm:ss'}}" />
								<Text text=" - " />
								<Text
									text="{
								path: 'entries>EndTime',
								type: 'sap.ui.model.type.Date',
								formatOptions: {pattern: 'hh:mm:ss'}}" />
							</HBox>
							<Text
								text="{entries>Duration}" />
							<Button
								icon="sap-icon://edit" />
							<Button
								icon="sap-icon://delete"
								press="onPressDelete"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
	</grid:CSSGrid>
</mvc:View>