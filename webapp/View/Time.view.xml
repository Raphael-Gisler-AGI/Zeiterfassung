<mvc:View xmlns:core="sap.ui.core"
	controllerName="sap.ui.agi.zeiterfassung.controller.Time"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns="sap.m">
	<grid:CSSGrid>
		<ScrollContainer class="sapUiMediumMargin" vertical="true">
			<Table
				id="entryTable"
				items="{
					path: 'entries>/',
					sorter: {
						path: 'Day',
						descending: true,
						group: true
					}
				}">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Entries" level="H1" />
							<ToolbarSpacer />
							<SearchField
								width="30%"
								liveChange="onFilterSearch"
								placeholder="Search for a Description">
							</SearchField>
							<ComboBox
								placeholder="Search for a Category"
								selectionChange="onFilterCategory"
								items="{categories>/}">
								<core:ListItem
									text="{categories>Name}"
									key="{categories>id}" />
							</ComboBox>
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Description" />
					</Column>
					<Column>
						<Text text="Time" />
					</Column>
					<Column>
						<Text text="Duration" />
					</Column>
					<Column>
						<Text text="Category" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Continue" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Edit" />
					</Column>
					<Column
						width="80px"
						hAlign="Right">
						<Text text="Delete" />
					</Column>
				</columns>
				<items>
					<ColumnListItem
						highlight="{= ${entries>id} === ${timer>/id} ? 'Information' : 'None' }">
						<cells>
							<ObjectIdentifier
								title="{entries>Description}" />
							<Text
								text="{
									path: 'entries>StartTime',
									type: 'sap.ui.model.type.Date',
									formatOptions: {pattern: 'hh:mm'}
								} - {
									path: 'entries>EndTime',
									type: 'sap.ui.model.type.Date',
									formatOptions: {pattern: 'hh:mm'}
								}" />
							<Text
								text="{
									path: 'entries>Duration',
									formatter: '.minutesToTime.getTime'
								}" />
							<Text
								text="{
								path: 'entries>Category',
								formatter: '.formatter.categoryText'
							}" />
							<Button
								icon="sap-icon://play"
								press="onPressContinue" />
							<Button
								icon="sap-icon://edit"
								press="onPressEdit" />
							<Button
								icon="sap-icon://delete"
								press="onPressDelete" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
	</grid:CSSGrid>
</mvc:View>