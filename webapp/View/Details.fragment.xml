<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        class="sapUiSmallContentPadding"
        title="{details>/Description}"
        placement="Auto">
        <beginButton>
            <Button
                text="Edit"
                press="handleEditDetails" />
        </beginButton>
        <endButton>
            <Button
                text="Delete"
                press="handleDeleteDetails" />
        </endButton>
        <content>
            <f:SimpleForm>
                <Title text="{
                    path: 'details>/Category',
                    formatter: '.formatter.getCategoryText'
                }" />
                <Label
                    labelFor="detailsStartTime"
                    text="From" />
                <Text text="{
                    path: 'details>/StartTime',
					formatter: '.formatter.getDate'
                }" />
                <Label
                    labelFor="detailsEndTime"
                    text="To" />
                <Text text="{
                    path: 'details>/EndTime',
					formatter: '.formatter.getDate'
                }" />
            </f:SimpleForm>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>