<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Favorites"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Panel
		expanded="true"
		expandable="true">
		<headerToolbar>
			<Toolbar>
				<Title text="Favorites" />
				<ToolbarSpacer />
				<Button
					tooltip="Create a Favorite"
					icon="sap-icon://create"
					press="onPressCreateFavorite" />
			</Toolbar>
		</headerToolbar>
		<ScrollContainer
			height="250px"
			vertical="true">
			<List
				id="favoriteList"
				mode="SingleSelectMaster"
				includeItemInSelection="true"
				items="{favorites>/}">
				<StandardListItem
					title="{favorites>Name}" />
			</List>
		</ScrollContainer>
		<HBox justifyContent="SpaceAround" class="sapUiSmallMarginTop">
			<Button
				press="onPressAddFavorite"
				icon="sap-icon://add" />
			<Button
				press="onPressEditFavorite"
				icon="sap-icon://edit" />
			<Button
				press="onPressDeleteFavorite"
				icon="sap-icon://delete" />
		</HBox>
	</Panel>
</mvc:View>