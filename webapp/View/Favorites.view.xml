<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Favorites"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Panel
		expanded="true"
		expandable="true">
		<headerToolbar>
			<Toolbar>
				<Title text="Favorites" />
			</Toolbar>
		</headerToolbar>
		<ScrollContainer
			height="250px"
			vertical="true">
			<List
				id="favoriteList"
				items="{favorites>/}">
				<items>
				<InputListItem label="{favorites>Name}">
					<Button
						press="onPressOptions"
						type="Transparent"
						icon="sap-icon://overflow">
						<dependents>
							<ActionSheet>
								<Button
									text="Use"
									icon="sap-icon://add"
									press=".onPressAddFavorite" />
								<Button
									text="Edit"
									icon="sap-icon://edit"
									press=".onPressEditFavorite" />
								<Button
									text="Delete"
									icon="sap-icon://delete"
									press=".onPressDeleteFavorite" />
							</ActionSheet>
						</dependents>
					</Button>
				</InputListItem>
				</items>
			</List>
		</ScrollContainer>
		<HBox
			width="100%"
			justifyContent="Center">
			<Button
				class="sapUiSmallMarginTop"
				press=".onPressCreateFavorite"
				icon="sap-icon://add" />
		</HBox>
	</Panel>
</mvc:View>