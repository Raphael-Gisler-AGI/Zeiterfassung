<mvc:View
	controllerName="sap.ui.agi.zeiterfassung.controller.Favorites"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Panel
		expanded="true"
		expandable="true">
		<headerToolbar>
			<Toolbar>
				<Title text="Favorites" />
				<ToolbarSpacer />
				<Button
					tooltip="Create a Favorite"
					icon="sap-icon://create"
					press="onPressCreateFavorite" />
			</Toolbar>
		</headerToolbar>
		<Table
			items="{favorites>/}">
			<columns>
				<Column>
					<Text text="Name" />
				</Column>
				<Column width="auto" hAlign="Right">
					<Text text="Edit" />
				</Column>
				<Column width="auto" hAlign="Right">
					<Text text="Delete" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{favorites>Description}" />
						<Button icon="sap-icon://edit" />
						<Button
							press="onPressDeleteFavorite"
							icon="sap-icon://delete" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>